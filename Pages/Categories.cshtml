@page "~/categories/{skip?}/{take?}"
@model  MyRazorApp.Pages.Categories

@{
    ViewData["Title"] = "Categories";
}

<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>Title</td>
            <td>Category</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
              {
        <tr>
            <td>@category.Id</td>
            <td>@category.Title</td>
            <td>@category.Price </td>
        </tr>
              }
    </tbody>
</table>